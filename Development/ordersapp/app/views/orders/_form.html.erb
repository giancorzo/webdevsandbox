<%= simple_form_for(@order) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :description %>
    <%= f.input :total_cost %>
    <% f.fields_for :items do |i| %>
      <%= i.association :product %>
      <%= i.input :quantity %>
    <% end %>

  </div>
  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
